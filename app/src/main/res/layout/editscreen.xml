<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/editDefName"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:text="Name of recording"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/editName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Change name to: " />

            <EditText
                android:id="@+id/editNamechanger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name" />

        </LinearLayout>

        <TextView
            android:id="@+id/editPlay"
            android:layout_width="match_parent"
            android:background="@android:color/holo_green_light"
            android:text="Play"
            android:textSize="24sp"
            android:layout_height="60dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/editRecord"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@android:color/holo_orange_dark"
            android:gravity="center"
            android:text="Re-record"
            android:textSize="24sp"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/editStopRecord"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="0"
                android:background="@android:color/holo_red_dark"
                android:gravity="center"
                android:text="Stop Recording"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/editPause"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="50"
                    android:background="@android:color/darker_gray"
                    android:gravity="center"
                    android:text="Pause"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/editResume"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="50"
                    android:background="@android:color/holo_green_light"
                    android:gravity="center"
                    android:text="Resume"
                    android:textSize="24sp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:layout_weight="1"
            android:orientation="vertical"
            tools:layout_editor_absoluteY="74dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/editSave"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="33"
                    android:background="@android:color/holo_green_light"
                    android:gravity="center"
                    android:text="Save"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/editDelete"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="33"
                    android:background="@android:color/holo_red_dark"
                    android:gravity="center"
                    android:text="Delete"
                    android:textSize="24sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/editDeleteChecker"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="Are you sure you want to delete this?"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/tt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/editDeleteYes"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="50"
                    android:background="@android:color/holo_green_dark"
                    android:gravity="center"
                    android:text="Yes"
                    android:textSize="24sp"/>

                <TextView
                    android:id="@+id/editDeleteNo"
                    android:layout_width="wrap_content"
                    android:layout_weight="50"
                    android:layout_height="50dp"
                    android:background="@android:color/holo_red_dark"
                    android:gravity="center"
                    android:text="No"
                    android:textSize="24sp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>